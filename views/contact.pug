extends base.pug

block scripts
    script(src="/static/index.js") 

block style
    style
        include ../static/style.css
        include ../static/contact_style.css

block content
    section#contact_section
      h3 Contact Us
      #contact-box
        form(action='/contact', method='post', class='myform')
          .form-group
            label(for='urname')|Name: 
            input#urname(type='text' name='urname' placeholder='Enter your name')
          br
          .form-group
            label(for='uremail')|E-mail: 
            input#uremail(type='email' name='uremail' placeholder='Enter your e-mail')
          br
          .form-group
            label(for='urnum')|Phone No.: 
            input#urnum(type='number' name='urnum' placeholder='Enter your phone number')
          br
          .form-group
            label(for='message')|Message: 
            textarea#message(name='message' rows='5' cols='20')  
          .form-group
            button.btn(type='submit')|Submit